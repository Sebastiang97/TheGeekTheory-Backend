model Payer{
  id                String @id @default(uuid())
  name              String
  surname           String
  city              String 
  email             String
  phone             String
  address           String
  zipCode           String
  detailAddress     String
  idUser            String @default("")
  creationDate      DateTime @default(now())
  updatedAt         DateTime @updatedAt
  payments          Pay[]
}

model Product {
  id                String @id @default(uuid())
  title             String
  description       String
  size              String
  color             String
  typeStamping      String
  quantity          Int
  isVisible         Boolean
  creationDate      DateTime @default(now())
  updatedAt         DateTime @updatedAt
  subCategoryId     String
  categoryId        String
  code              String @default("")
  generalProductId  String
  generalProducts   GeneralProduct @relation(fields: [generalProductId], references: [id])
  urlImage          ProductImage[]
  // Restricción única compuesta para evitar duplicados
  @@unique([generalProductId, size, color], name: "product_unique_size_color")
}

model GeneralProduct {
  id                String @id @default(uuid())
  title              String
  description       String
  price             Int
  quantity          Int?
  creationDate      DateTime @default(now())
  updatedAt         DateTime @updatedAt
  subCategoryId     String
  categoryId        String
  code              String @default("")
  isVisible         Boolean 
  subCategory       SubCategory @relation(fields: [subCategoryId], references: [id])
  category          Category @relation(fields: [categoryId], references: [id])
  products          Product[]
  tags              ProductTag[]
  colorImageSize    ColorGeneralProduct[]
}

model ColorGeneralProduct{
  id                    String @id @default(uuid())
  generalProduct       GeneralProduct?  @relation(fields: [generalProductId], references: [id])
  generalProductId     String
  colorsImages          ColorImage[]
}

model ColorImage{
  id                    String               @id @default(uuid())
  color                 String
  image                 String
  colorGeneralProductId String
  colorGeneralProduct   ColorGeneralProduct  @relation(fields: [colorGeneralProductId], references: [id])
  size                  ColorImageSize[]
}

model ColorImageSize{
  id                    String       @id @default(uuid())
  size                  String
  colorImage            ColorImage   @relation(fields: [colorImageId], references: [id])
  colorImageId          String
  @@unique([colorImageId, size], name: "colorimagesize_unique_size")
}

model Tag{
  id                String @id @default(uuid())
  name              String @unique
  displayName       String
  products          ProductTag[]
}

model ProductTag{
  id                String    @id @default(uuid())
  product           GeneralProduct  @relation(fields: [generalProductId], references: [id])
  generalProductId  String
  tag               Tag?      @relation(fields: [tagId], references: [id])
  tagId             String
}